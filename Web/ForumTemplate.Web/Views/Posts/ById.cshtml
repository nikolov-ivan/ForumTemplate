@model ForumTemplate.Web.ViewModels.Posts.PostViewModel
@{
    this.ViewData["Title"] = Model.Name;
}



<div class="container-fluid mt-100 shadow p-3 mb-5 bg-light">
    <h3><u>Post Title:</u>@this.ViewData["Title"]</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583246/AAA/2.jpg" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3">
                            <span>Posted by:<a href="javascript:void(0)" data-abc="true">@Model.UserUsername</a></span>
                            <div class="text-muted small">Posted on:@Model.PostDate days ago</div>
                        </div>
                        <div class="text-muted small ml-3">
                            <div><strong>Member since:</strong>01/1/2019</div>
                            <div><strong>Total # of posts:</strong>134 posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p>
                        @Html.Raw(Model.SanitizedContent);
                    </p>

                </div>
                <div class="card-footer d-flex align-items-center   px-0 pt-0 pb-3">
                    <div class="px-4 pt-2">
                        <a href="javascript:void(0)" class="text-muted d-inline-flex align-items-center align-middle" data-abc="true"> <i class="fa fa-heart text-danger"></i>&nbsp; <span class="align-middle">445</span> </a> <span class="text-muted d-inline-flex align-items-center align-middle ml-4"> <i class="fa fa-eye text-muted fsize-3"></i>&nbsp; <span class="align-middle">14532</span> </span>
                        @if (Model.ModifiedOn != null)
                        {
                            <span>@Model.ModifiedOn</span>
                        }
                    </div>
                    <div class="px-4 pt-3 ml-auto"><a asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-primary">Edit</a></div>
                    <div class="px-4 pt-3 "><a asp-controller="Comments" asp-action="Create" asp-route-id="@Model.Id" type="button" class="btn btn-primary"><i class="fas fa-reply" data-bs-toggle="tooltip" data-bs-placement="top" title="Reply this post"></i></a> </div>
                </div>
            </div>
        </div>
    </div>
</div>
@foreach (var comment in Model.Comments)
{
    <div class="container-fluid mt-100 shadow p-3 mb-5 bg-dark rounded">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="media flex-wrap w-100 align-items-center">
                            <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583246/AAA/2.jpg" class="d-block ui-w-40 rounded-circle" alt="">
                            <div class="media-body ml-3">
                                <a href="javascript:void(0)" data-abc="true">@comment.UserUserName</a>
                                <div class="text-muted small">@Model.PostDate days ago</div>
                            </div>
                            <div class="text-muted small ml-3">
                                <div>Member since <strong>01/1/2019</strong></div>
                                <div><strong>134</strong> posts</div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>
                            @Html.Raw(comment.SanitizedContent);
                        </p>

                    </div>
                    <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                        <div class="px-4 pt-3"> 
                        <a href="javascript:void(0)" class="text-muted d-inline-flex align-items-center align-middle" data-abc="true"> <i class="fa fa-heart text-danger"></i>&nbsp; 
                            <span class="align-middle">445</span> 
                        </a> 
                            <span class="text-muted d-inline-flex align-items-center align-middle ml-4"> 
                            <i class="fa fa-eye text-muted fsize-3"></i>&nbsp; <span class="align-middle">14532</span> </span>
                            @if(comment.ModifiedOn != null)
                            {
                                <span>Last modified on:@comment.ModifiedOn</span>
                            }
                        </div>
                        <div class="px-4 pt-3"> <button type="button" class="btn btn-primary"><i class="ion ion-md-create"></i>&nbsp; Reply</button> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}